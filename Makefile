# Root Makefile

# Include common configuration
include config.mk

# --------------------------------------------------------------------
# Subdirectories (add new projects here)
# --------------------------------------------------------------------
SUBDIRS = engine game

# --------------------------------------------------------------------
# Phony targets
# --------------------------------------------------------------------
.PHONY: all clean $(SUBDIRS)

# --------------------------------------------------------------------
# Default target
# --------------------------------------------------------------------
all: $(SUBDIRS)

# --------------------------------------------------------------------
# Build subdirectories
# --------------------------------------------------------------------
$(SUBDIRS):
	@echo --- Building $@... ---
	@$(MAKE) -C $@

# --------------------------------------------------------------------
# Clean target
# --------------------------------------------------------------------
clean:
	@echo --- Cleaning all ---
	@$(RM) $(BUILD_DIR)
