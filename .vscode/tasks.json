{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "-g",
                "${workspaceFolder}/src/core/main.c",
                "-o",
                "${workspaceFolder}/build/game.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the main C file using Clang."
        },
        {
            "label": "test",
            "type": "shell",
            "command": "echo",
            "args": [
                "Running tests..."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}