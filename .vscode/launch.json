{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Game",
      "type": "cppdbg",
      "request": "launch",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin/",
      "environment": [],
      "program": "${workspaceFolder}/build/bin/game",
      "osx": {
        "MIMode": "lldb",
        "targetArchitecture": "arm64",
        "externalConsole": false,
      },
      "linux": {
        "externalConsole": false,
      },
      "windows": {
        "type": "cppvsdbg",
        "program": "${workspaceFolder}/build/bin/game.exe",
        "externalConsole": false,
      },
    },
  ],
}
